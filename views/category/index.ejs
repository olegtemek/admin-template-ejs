<% layout('layouts/main.ejs') -%>

  <h1 class="h3 mb-2 text-gray-800">Все категории</h1>
  <a href="/admin/category/create" class="btn btn-success mb-4">Добавить категорию</a>

  <div class="card shadow mb-4">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>Название</th>
              <th>Описание</th>
              <th>Редактировать/Удалить</th>
            </tr>
          </thead>
          <tbody>

            <% for(var i=0; i<categories.length; i++) {%>
              <tr>
                <td>
                  <%= categories[i].title %>
                </td>
                <td>
                  <%= categories[i].description %>
                </td>

                <td>
                  <a href="/admin/category/edit/<%= categories[i].id %>" class="btn btn-success">Редактировать</a>
                  <form action="/admin/category/destroy/<%= categories[i].id %>" method="POST" style="display:inline">
                    <button class="btn btn-danger" type="submit">Удалить</button>
                  </form>
                </td>
              </tr>
              <% } %>

          </tbody>
        </table>
      </div>
    </div>
  </div>