<% layout('layouts/main.ejs') -%>

  <h1 class="h3 mb-2 text-gray-800">Все фотографии</h1>
  <a href="/admin/gallery/create" class="btn btn-success mb-4">Добавить фото</a>

  <div class="card shadow mb-4">
    <div class="card-body">
      <div class="table-responsive">
        <table class="table table-bordered" id="dataTable" width="100%" cellspacing="0">
          <thead>
            <tr>
              <th>Название</th>
              <th>Фотография</th>
              <th>Редактировать/Удалить</th>
            </tr>
          </thead>
          <tbody>

            <% for(var i=0; i<galleries.length; i++) {%>
              <tr>
                <td>
                  <%= galleries[i].title %>
                </td>
                <td>
                  <img style="max-width:150px;" src="/<%= galleries[i].image %>" alt="image">
                </td>
                <td>
                  <a href="/admin/gallery/edit/<%= galleries[i].id %>" class="btn btn-success">Редактировать</a>
                  <form action="/admin/gallery/destroy/<%= galleries[i].id %>" method="POST" style="display:inline">
                    <button class="btn btn-danger" type="submit">Удалить</button>
                  </form>
                </td>
              </tr>
              <% } %>

          </tbody>
        </table>
      </div>
    </div>
  </div>